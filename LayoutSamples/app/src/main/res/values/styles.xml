<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearanceButton" parent="@android:style/TextAppearance.Material.Widget.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonAppearance" parent="@android:style/Widget.Material.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/TextAppearanceButton</item>
    </style>

    <style name="ButtonOnBoarding" parent="@style/ButtonAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/pixel_46</item>
        <item name="android:layout_marginTop">@dimen/pixel_10</item>
        <item name="android:layout_marginLeft">@dimen/pixel_20</item>
        <item name="android:layout_marginRight">@dimen/pixel_20</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
